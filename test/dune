(executable
 (name test)
 (modules test)
 (libraries rosetta unstrctrd unstrctrd.parser alcotest fmt rresult result
   angstrom multipart_form))

(executable
 (name test_lwt)
 (modules test_lwt)
 (libraries fmt fmt.tty logs logs.fmt alcotest alcotest-lwt lwt
   multipart_form multipart_form-lwt))

